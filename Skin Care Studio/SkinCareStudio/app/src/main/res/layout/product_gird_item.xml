<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/slider_background"
    android:elevation="3dp"
    android:orientation="vertical"
    android:padding="3dp">


    <ImageView
        android:id="@+id/h_s_product_image"
        android:layout_width="512px"
        android:layout_height="312px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/first_poster" />


    <TextView
        android:id="@+id/h_s_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:text="Redmi 5A"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/h_s_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="RS.5999/-"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/h_s_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:text="SD 425 processor"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="10sp" />


</LinearLayout>