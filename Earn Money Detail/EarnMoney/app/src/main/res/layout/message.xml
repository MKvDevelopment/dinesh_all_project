<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e0e0e0">

    <RelativeLayout
        android:id="@+id/message_relative_left"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/reciver"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/message_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="asdasdasdasdasssssssss"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:visibility="visible"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/message_imagetext_left"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/message_loading_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEST"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/message_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed"
                android:text="time"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textStyle="italic" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_relative_right"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_gravity="end"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/sender"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/message_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="asdasdasda"
                android:visibility="visible"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/message_imagetext_right"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/message_loading_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEST"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/message_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-condensed"
                android:text="time"
                android:padding="3dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:textStyle="italic" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_relative_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/message_typing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Typing..."
            android:textStyle="italic"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/message_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Seen"
            android:textStyle="italic"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>