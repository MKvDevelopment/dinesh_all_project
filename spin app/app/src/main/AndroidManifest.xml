<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spin.wheelgame">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.spin.wheelgame.activities.SpleshActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/AppThemeNoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spin.wheelgame.activities.AddMoneyActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="nosensor"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name="com.spin.wheelgame.activities.WithdrawActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name="com.spin.wheelgame.activities.ContentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.spin.wheelgame.activities.AuthActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.spin.wheelgame.activities.Spin2Activity"
            android:theme="@style/AppThemeNoActionBar" />
    </application>


</manifest>